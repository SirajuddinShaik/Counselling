<%- include("partials/header") -%>
<title>Profile</title>
<body style="padding-top: 5rem; background-color: #db5656;">
  <form action="" method="post">
    <table>
      <tr>
        <td><div class="col-lg-3 col-sm-12" style="padding-right: 10rem; padding-left: 5rem;"><img class="profile-img" src="/images/clg-img.jpeg" alt=""></div></td>
        <td><div>
          <div class="mb-3 col-lg-4 col-mg-5 profile-element-top">
            <label for="branch" class="form-label">Branch*</label>
            <input type="text" class="form-control" value="" name="branch" id="branch" >
          </div>
          <div class="mb-3 col-lg-4 col-mg-5 profile-element-top">
            <label for="regdno" class="form-label">Total Fee.*</label>
            <input type="text" class="form-control" name="totalFee" id="totalFee" value="">
          </div>
          <div class="mb-3 col-lg-4 col-mg-5 profile-element-top">
            <label for="fee" class="form-label">Fee Paid</label>
            <input type="number" class="form-control" name="fee" id="fee" value="">
          </div>
          <div class="mb-3 col-lg-4 col-mg-5 profile-element-top">
            <label for="branch" class="form-label">Attendence</label>
            <input type="text" class="form-control" name="attendance" id="attendance"  value="">
          </div>
        </div></td>
      </tr>
    </table>
    <br><br>
    

    
    <div class="mb-3 col-lg-5 col-mg-1 profile-element">
      <label for="fname" class="form-label">First Name*</label>
      <input type="text" class="form-control"  name="fname" id="fname" value="">
    </div>

    
    <div class="mb-3 col-lg-5 col-mg-1 profile-element">
      <label for="lname" class="form-label">Last Name*</label>
      <input type="text" class="form-control" name="lname" id="lname" value="">
    </div>

    
    <div class="mb-3 col-lg-5 col-mg-12 profile-element">
      <label for="email" class="form-label">Email address*</label>
      <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email" value="">
    </div>

    
    <div class="mb-3 col-lg-5 col-mg-1 profile-element">
      <label for="regdno1" class="form-label">Registration No.*</label>
      <input type="text" class="form-control" id="regdno" name="regdno" value="">
    </div>

    
    <div class="mb-3 col-lg-5 col-mg-1 profile-element">
      <label for="mobile" class="form-label">Mobile No.</label>
      <input type="number" class="form-control" name="mobile" id="mobile" value="">
    </div>

    
    <div class="mb-3 col-lg-5 col-mg-1 profile-element">
      <label for="address" class="form-label">Address</label>
      <input type="text" class="form-control" name="address" id="address"  value="">
    </div>

    <% if(type===3){ %> 
    <div class="mb-3 col-lg-5 col-mg-1 profile-element">
      <label for="fatherName" class="form-label">Father's Name</label>
      <input type="text" class="form-control" name="fatherName" id="fatherName" value="">
    </div>

    <div class="mb-3 col-lg-5 col-mg-1 profile-element">
      <label for="fmobile" class="form-label">Father's Mobile No.</label>
      <input type="number" class="form-control" name="fmobile" id="fmobile" value="">
    </div>

      
    <div class="mb-3 col-lg-5 col-mg-1 profile-element">
      <label for="motherName" class="form-label">Mother's Name</label>
      <input type="text" class="form-control" name="motherName" id="motherName" value="">
    </div>

    <div class="mb-3 col-lg-5 col-mg-1 profile-element">
      <label for="mmobile" class="form-label">Mother's Mobile No.</label>
      <input type="number" class="form-control" name="mmobile" id="mmobile" value="">
    </div>
    <% } %> 

    <input type="text" name="type1" value=<%= type1 %>  hidden>
    <input type="text" name="type" value=<%= type %>  hidden>

    <% let back=type1 %>
    <div class="col-lg-5 col-sm-12 profile-btn"><a id="cancel" class="btn btn-outline-warning btn-lg" href=<%= type1 %>>Cancel</a></div>
    <div class="col-lg-5 col-sm-12 profile-btn"><button  class="btn btn-outline-dark btn-lg">Save</button></div>

  </form>
    <!-- <div class="col-lg-5 col-sm-12 profile-btn"><a id="back" class="btn btn-outline-light btn-lg" href=<%= type1 %>>Back</a></div>
    <div class="col-lg-5 col-sm-12 profile-btn"><button onclick="edit()" class="btn btn-outline-dark btn-lg">Edit</button></div> -->
  <br>
  <br>
  <br>

  <!-- <script src="/script/profile.js"></script> -->
</body>
</html>
